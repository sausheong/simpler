{
    "manifest_version": 3,
    "name": "Simpler",
    "version": "1.0",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
    "permissions": ["sidePanel", "storage"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": "simpler.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "options_page": "settings.html"
}
  